{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@ui8kit/core": ["src/components/ui8kit.ts"]
    },
    "types": ["react", "react-dom"]
  },
  "include": ["src", "types"],
  "exclude": ["dist", "data", "server", "build.ts", "tailwind.config.ts"]
}
